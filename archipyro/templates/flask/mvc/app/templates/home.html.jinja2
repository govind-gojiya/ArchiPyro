{% raw %}{% extends "base.html" %}

{% block title %}Home - {% endraw %}{{ config.name }}{% raw %}{% endblock %}

{% block content %}{% endraw %}
<div class="card">
    <h1 style="margin-bottom: 1rem;">Welcome{% raw %}{% if session.get('username') %}, {{ session.get('username') }}{% endif %}{% endraw %}!</h1>
    
    {% raw %}{% if session.get('user_id') %}{% endraw %}
        <p style="color: #666; margin-bottom: 2rem;">You are logged in.</p>
        
        <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 4px; border-left: 4px solid #3498db;">
            <h3 style="margin-bottom: 0.5rem;">Getting Started</h3>
            <p style="color: #666;">This is your home page. You can customize it in <code style="background: #e9ecef; padding: 0.2rem 0.4rem; border-radius: 3px;">app/templates/home.html</code></p>
        </div>
    {% raw %}{% else %}{% endraw %}
        <p style="color: #666; margin-bottom: 1rem;">Please <a href="{% raw %}{{ url_for('auth.login') }}{% endraw %}" style="color: #3498db; text-decoration: none;">login</a> or <a href="{% raw %}{{ url_for('auth.register') }}{% endraw %}" style="color: #3498db; text-decoration: none;">register</a> to continue.</p>
    {% raw %}{% endif %}{% endraw %}
</div>
{% raw %}{% endblock %}{% endraw %}
