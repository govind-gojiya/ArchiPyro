PROJECT_NAME={{ config.name }}
SECRET_KEY=change-this-to-random-secret
ENVIRONMENT=development

{% if config.framework == 'Flask' -%}
FLASK_APP={% if config.architecture == 'MVC' %}run.py{% else %}app{% endif %}
FLASK_ENV=development
FLASK_DEBUG=1

{% endif -%}
{% if config.database == 'PostgreSQL' -%}
DEV_DATABASE_URL=postgresql://user:password@localhost:5432/{{ config.slug }}_dev
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/{{ config.slug }}_test
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB={{ config.slug }}

{% elif config.database == 'MySQL' -%}
DEV_DATABASE_URL=mysql+pymysql://user:password@localhost:3306/{{ config.slug }}_dev
TEST_DATABASE_URL=mysql+pymysql://user:password@localhost:3306/{{ config.slug }}_test
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE={{ config.slug }}
MYSQL_USER=user
MYSQL_PASSWORD=password

{% elif config.database == 'SQLite' -%}
DEV_DATABASE_URL=sqlite:///{{ config.slug }}_dev.db
TEST_DATABASE_URL=sqlite:///{{ config.slug }}_test.db

{% elif config.database == 'MongoDB' -%}
DEV_MONGODB_URL=mongodb://localhost:27017/{{ config.slug }}_dev
TEST_MONGODB_URL=mongodb://localhost:27017/{{ config.slug }}_test

{% endif -%}
{% if 'Redis / Cache' in config.features -%}
REDIS_URL=redis://localhost:6379/0

{% endif -%}
{% if 'Celery / RQ Background Tasks' in config.features -%}
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

{% endif -%}
{% if 'Mail Service' in config.features -%}
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
{% endif -%}
